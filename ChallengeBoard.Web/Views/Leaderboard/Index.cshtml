@model ChallengeBoard.Web.ViewModels.LeaderboardViewModel
   
<div class="leaderboard" id="leaderboard">
    <table class="leaderboard__result">        
        @for (var i = 0; i<Model.Items.Count; i++) {
            <tr>
                <td>@(i+1).</td>
                <td>@Model.Items[i].DisplayName</td>
                <td>@Model.Items[i].Points</td>
            </tr>
        }
    </table>
</div>